<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DWPennyFinder.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Name:" FontSize="Medium" />
        <Label Text="{Binding Name}" FontSize="Small" FontAttributes="Bold"/>
        <Label Text="Park:" FontSize="Medium" />
        <Label Text="{Binding Park}" FontSize="Large"/>
         <Label Text="Location:" FontSize="Medium" />
        <Label Text="{Binding Location}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>
